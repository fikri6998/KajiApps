<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:id="@+id/linearLayoutKajian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vpotokajian"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:src="@drawable/logo_profil" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Judul:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vnamakajian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Judul Kajian" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lokasi:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/vlokasikajian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lokasi Kajian" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Waktu:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vwaktukajian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hari/Bulan/Tahun" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Penceramah"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vpenceramah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Penceramah" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>